<h2>New Tweet!</h2>
<form action="/tweets" class="tweet-compose" data-tweets-ul="#feed" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <br>

  <label>
  Characters Left:
  <strong class="chars-left"></strong>
  </label>
  <br />

<script type="text/template">
  <div>
    <select name="tweet[mentioned_user_ids][]">
      <option></option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
    <a href="#" class="remove-mentioned-user">Remove Mention</a>
  </div>
</script>
<a href="#" class="add-mentioned-user">Add Mention</a>
<br />
<div class="mentioned-users">

</div>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
